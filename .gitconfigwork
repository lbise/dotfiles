[color]
	excludesfile = h:/.gitignore_global
	ui = auto

[color "diff"]
	meta = blue
	frag = white
	old = red bold
	new = green bold

[core]
	editor = nvim
	filemode = false
	autocrlf = false

[user]
	name = Leonard Bise
	email = leonard.bise@sonova.com
	signingkey = 74C8AEB4E19420A7

[difftool]
	prompt = false

[merge]
	tool = nvimdiff2

[grep]
	extendRegexp = true
	lineNumber = true

[alias]
	a = add
	ua = reset HEAD
	c = commit
	ca = commit --amend
	call = commit -a
	cm = commit -m
	cam = commit -am
	cne = commit --no-edit
	co = checkout
	s = status
	d = diff
	cp = cherry-pick
	l = log --graph --pretty=format:'%C(magenta)%h%C(blue)%d%Creset %s %C(blue bold)- %an, %ad%Creset'
	ll = log --stat --abbrev-commit
	# List my own commits
	my = !git log --branches=* --no-merges --pretty=format:'%C(reset)%C(bold)%cd %C(reset)%C(white)%s  %C(reset)%h' --date=short --author=\"$(git config user.name)\"
	# List of branches ordered by last change
	branches = for-each-ref --sort=-committerdate refs/heads/ --format='%(color:bold)%(refname:short)%(color:reset)\t%(committerdate:relative)'
	# Rebase: add changes and continue
	cont = !git add . && git rebase --continue
	# Rebase: skip a rebase step
	skip = rebase --skip
	# Rebase: abort
	abort = rebase --abort

[log]
	# Show branch names with git log
	decorate = short
[pull]
	rebase = true
[mergetool]
	keepBackup = false
	prompt = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[rebase]
	autoSquash = yes
	autoStash = yes
[oh-my-zsh]
	# Hides git status dirty symbol which might be very slow on some repo
	hide-dirty = 1
[credential]
	helper = /usr/local/bin/git-credential-manager
	credentialStore = gpg
	useHttpPath = true
[commit]
	gpgsign = true
[safe]
	directory = *
[rerere]
	enabled = true
[tag]
	gpgsign = true
[remote "origin"]
	prune = true
[fetch]
	prune = true
	pruneTags = true
[credential "https://dev.azure.com"]
	useHttpPath = true
[credential "https://ch03git.phonak.com"]
	provider = generic
