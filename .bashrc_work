#!/usr/bin/env bash
# The default prompt uses __git_ps1 which is quite slow
fast_git_ps1 ()
{
    printf -- "$(git branch 2>/dev/null | sed -ne '/^\* / s/^\* \(.*\)/ [\1] / p' | sed 's/[()]//g')"
}

# Default prompt:  \[\033[01;32m\]\w \[\033[33m\]$(__git_ps1 "(%s)")\[\033[35m\]$\[\033[00m\]
PS1='\[\033[01;32m\]\w\[\033[33m\]$(fast_git_ps1)\[\033[35m\]$\[\033[00m\] '
