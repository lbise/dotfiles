{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "model": "github-copilot/claude-opus-4.6",
  "small_model": "github-copilot/gpt-4.1",
  "share": "disabled",
  "autoupdate": false,
  "instructions": ["ai_notes/conventions.md"],
  "plugin": ["opencode-antigravity-auth@latest"],
  "provider": {
    "google": {
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": { "thinkingLevel": "low" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "minimal": { "thinkingLevel": "minimal" },
            "low": { "thinkingLevel": "low" },
            "medium": { "thinkingLevel": "medium" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "antigravity-claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
          }
        },
        "antigravity-claude-opus-4-5-thinking": {
          "name": "Claude Opus 4.5 Thinking (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
          }
        },
        "antigravity-claude-opus-4-6-thinking": {
          "name": "Claude Opus 4.6 Thinking (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
          }
        },
        "gemini-2.5-flash": {
          "name": "Gemini 2.5 Flash (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-3-flash-preview": {
          "name": "Gemini 3 Flash Preview (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-3-pro-preview": {
          "name": "Gemini 3 Pro Preview (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        }
      }
    },
    "azure-anthropic": {
      "name": "Azure AI Foundry (Anthropic)",
      "npm": "@ai-sdk/anthropic",
      "api": "{env:AZURE_API_BASE}",
      "env": ["AZURE_API_KEY"],
      "models": {
        "claude-opus-4-5": {
          "id": "claude-opus-4-5",
          "name": "Claude Opus 4.5",
          "tool_call": true,
          "attachment": true,
          "reasoning": true,
          "temperature": true
        },
        "claude-sonnet-4-5": {
          "id": "claude-sonnet-4-5",
          "name": "Claude Sonnet 4.5",
          "tool_call": true,
          "attachment": true,
          "reasoning": true,
          "temperature": true,
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        },
        "claude-haiku-4-5": {
          "id": "claude-haiku-4-5",
          "name": "Claude Haiku 4.5",
          "tool_call": true,
          "attachment": true,
          "reasoning": true,
          "temperature": true,
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        }
      }
    }
  },
  "formatter": {
    "clang-format": {
      "command": [
        "clang-format",
        "--style-file={env:$ANDROMEDA_ROOT}/hooks/.clang-format",
        "-i $FILE"
      ],
      "extensions": [".c", ".cpp", ".h", ".hpp", ".ino", ".unity"]
    },
    "ruff": {
      "command": [
        "ruff",
        "format",
        "$FILE",
        "--config {env:$ANDROMEDA_ROOT}/pyproject.toml"
      ],
      "extensions": [".py", ".pyi"]
    }
  },
  "lsp": {
    "clangd": {
      "disabled": true
    },
    "pyright": {
      "disabled": true
    },
    "basedpyright": {
      "command": ["basedpyright-langserver", "--stdio"],
      "extensions": [".py"],
      "initialization": {
        "typeCheckingMode": "all",
        "extraPaths": [
		  "{env:$HOME}/andromeda",
		  "{env:$HOME}/andromeda/apps/scripts/python",
		  "{env:$HOME}/andromeda/bt/scripts/python",
		  "{env:$HOME}/andromeda/buildsystem/scripts/python",
		  "{env:$HOME}/andromeda/dsp/scripts/python",
		  "{env:$HOME}/andromeda/executer/scripts/python",
		  "{env:$HOME}/andromeda/hlc/scripts/python",
		  "{env:$HOME}/andromeda/infrastructure/scripts/python",
		  "{env:$HOME}/andromeda/pctools/scripts/python",
		  "{env:$HOME}/andromeda/raspi4/scripts/python",
		  "{env:$HOME}/andromeda/rom/scripts/python",
		  "{env:$HOME}/andromeda/stf4/scripts/python",
		  "{env:$HOME}/andromeda/tstenv/scripts/python",
		  "{env:$HOME}/andromeda/nordic/scripts/python",
		],
      }
    }
  },
  "agent": {
    "explore": {
      "model": "github-copilot/claude-sonnet-4.5"
    }
  }
}
